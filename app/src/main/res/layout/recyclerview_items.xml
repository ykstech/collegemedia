<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="8dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
<!--        ECEFF1-->
   <ImageView
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:background="@drawable/circularbg"
       android:id="@+id/profilepic"
       android:layout_marginLeft="5dp"
       android:layout_marginTop="5dp"
       android:layout_marginRight="10dp"
       android:layout_marginBottom="10dp"
       />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profilepic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textSize="16sp"
            android:id="@+id/profilepictext"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profilepic"
            android:layout_alignTop="@+id/profilepic"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/profilename"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"

            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:id="@+id/morebtn"
            android:background="@null"
            android:src="@drawable/ic_baseline_more_vert_24"

            />
        <ImageView
            android:layout_below="@+id/profilepic"
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
            />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/like"
            android:layout_below="@+id/imageView"
            android:id="@+id/likebutton"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/white"

            />

<!--        ?attr/colorControlNormal-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/likebutton"
            android:layout_alignTop="@+id/likebutton"
            android:text=""
            android:layout_marginTop="0dp"
            android:textColor="@color/black"
            android:id="@+id/likecounter"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/likebutton"
            android:text="yash"
            android:layout_marginTop="0dp"
            android:textColor="@color/black"
            android:id="@+id/profilename2"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:autoLink="web"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:text=""
            android:layout_alignTop="@+id/profilename2"
            android:id="@+id/ImageNameTextView"
            android:autoLink="web"
            android:layout_toRightOf="@+id/profilename2"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilename2"
            android:textSize="12sp"
            android:text=""
            android:id="@+id/date"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>